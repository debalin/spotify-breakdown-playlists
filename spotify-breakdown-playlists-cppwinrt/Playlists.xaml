<Page
	x:Class="spotify_breakdown_playlists_cppwinrt.Playlists"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:spotify_breakdown_playlists_cppwinrt"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<controls:NavigationView
		IsBackButtonVisible="Collapsed"
		IsPaneOpen="False"
		PaneTitle="">
		<StackPanel>
			<TextBlock
				Margin="10,0,0,0"
				Style="{StaticResource SubheaderTextBlockStyle}"
				Text="Choose a playlist." />
			<ScrollViewer Margin="0,5,0,0" HorizontalScrollBarVisibility="Auto">
				<ListView ItemsSource="{x:Bind SpotifyPlaylists, Mode=OneWay}">
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="local:Playlist">
							<TextBlock Text="{x:Bind Name, Mode=OneWay}" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ListView>
			</ScrollViewer>
		</StackPanel>
	</controls:NavigationView>

</Page>
